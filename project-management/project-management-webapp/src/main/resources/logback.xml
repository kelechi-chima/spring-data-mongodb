<configuration scan="true" scanPeriod="30 seconds">

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.afrosoft.projectmanagement" />

  <logger name="org.apache.commons.digester.Digester" level="WARNING" />

  <logger name="org.apache.myfaces.webapp" level="WARNING" />
  
  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
  
</configuration>